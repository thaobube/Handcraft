@model Handcraft.Models.UserModel
@{
    ViewBag.Title = "EditPicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w3l-banner-slider-main inner-pagehny">
    <div class="breadcrumb-infhny">
        <div class="top-header-content">
            @{
                Html.RenderPartial("~/Views/Shared/_header.cshtml");
            }            <div class="breadcrumb-contentnhy">
                <div class="container">
                    <nav aria-label="breadcrumb">
                        <h2 class="hny-title text-center">Edit Picture</h2>
                        <ol class="breadcrumb mb-0">
                            <li>
                                <a href="index.html">Profile</a>
                                <span class="fa fa-angle-double-right"></span>
                            </li>
                            <li class="active">EditPicture</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="col-md-8 col-md-offset-3">
                <br />
                <h4>Edit Your Profile Picture!</h4>
                <hr />
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "control-label col-md-2" })
                            <input type="file" name="FilePicture" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    </form>
</div>